#!/usr/bin/pooscript
# Display help for ShipOS commands

print("=" * 60)
print("SHIPOS COMMAND REFERENCE")
print("=" * 60)
print()
print("SHIP CONTROL:")
print("  status          - Show complete ship status (/proc/ship/status)")
print("  systems         - List all ship systems (/sys/ship/systems)")
print("  crew            - Show autonomous crew bot status")
print("  power [sys] [n] - Show/set power allocation")
print("  rooms           - Show room status (/sys/ship/rooms)")
print("  vent <room>     - Toggle room venting")
print()
print("CREW MANAGEMENT:")
print("  Crew are AUTONOMOUS BOTS - they manage themselves!")
print("  - Automatically repair damaged systems")
print("  - Fight fires")
print("  - Monitor oxygen levels")
print("  - Operate systems efficiently")
print("  No manual assignment needed - just allocate power!")
print()
print("UNIX COMMANDS:")
print("  ls [-la] [dir]  - List directory contents")
print("  cat <file>      - Display file contents")
print("  pwd             - Print working directory")
print("  echo <text>     - Print text")
print("  head [-n] <file>- Show first lines of file")
print()
print("HACKING:")
print("  hack <cmd>      - View source code of any command")
print("  ls /dev/ship    - Hardware devices (hull, shields, reactor)")
print("  ls /proc/ship   - Ship state files (status, power)")
print("  ls /sys/ship    - Ship subsystems (systems, crew, rooms)")
print()
print("SPECIAL:")
print("  warp / jump     - Engage warp drive (visual effect)")
print("  exit / quit     - Exit the game")
print()
print("EVERYTHING IS A FILE. EVERYTHING IS HACKABLE.")
print("All commands are PooScript in /bin. Read them, modify them!")
print("=" * 60)
